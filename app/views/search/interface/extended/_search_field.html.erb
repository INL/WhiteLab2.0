<div id="extended-<%= field %>" class="form-group">
	<label for="extended-<%= field %>" class="col-xs-12 col-sm-2 control-label padding-top-15"><%= t(:"data_labels.keys.#{field}") %></label>
	<div class="col-xs-12 col-sm-10 padding-top-10">
		<div class="row batchrow searchrow">
			<div class="searchinput col-xs-9 col-sm-11">
				<textarea class="batchlist form-control"></textarea>
				<% if ['word','lemma','phonetic'].include?(field) %>
					<span class="tiny"><input class="wordcase" type="checkbox" /> <%= t(:'data_labels.keys.case_sensitive').capitalize %></span>
				<% end %>
			</div>
			<div class="col-xs-3 col-sm-1 loadbutton">
				<button class="erase btn-xs btn-default" alt="Wis woordenlijst" onclick="event.preventDefault(); Whitelab.search.extended.eraseBatchList(this);"></button>
			</div>
		</div>
		<div class="row inputrow searchrow active">
			<div class="searchinput col-xs-9 col-sm-11">
				<% if field.eql?('pos') %>
					<div class="selectpicker padding-bottom-10">
						<%= select_tag(:"#{field}-text", options_for_select(options), :class => 'form-control', :include_blank => true) %>
					</div>
					<span id="extended-refine-pos" class="tiny red hidden"><a href="#" onclick="event.preventDefault(); $('#refine-pos').toggleClass('hidden')"><%= t(:'button_labels.keys.refine').capitalize %></a></span>
					<div id="refine-pos" class="hidden margin-bottom-10"></div>
				<% else %>
					<input type="text" class="form-control padding-bottom-10" id="<%= field %>-text" />
					<span class="tiny"><input class="wordcase" type="checkbox" /> <%= t(:'data_labels.keys.case_sensitive').capitalize %></span>
				<% end %>
			</div>
			<div class="col-xs-3 col-sm-1 loadbutton file-control">
				<div style="position:relative; height: 36px;">
					<div class="batchWordListBtn">
						<button class="load" onclick="event.preventDefault();"></button>
					</div>
					<input class="loadlist" type="file" onchange="Whitelab.search.extended.loadBatchList(this);">
				</div>
			</div>
		</div>
	</div>
</div>
