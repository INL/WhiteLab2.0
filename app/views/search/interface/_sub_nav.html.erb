			<li id="link-spacer"><a class="tablink" onclick="event.preventDefault();" disabled>||</a></li>
			<li id="document_link" class="active"><a class="tablink" onclick="event.preventDefault();"><%= t(:"page_titles.keys.document").capitalize %></a></li>
		<% end %>
	</ul>
	<% if !action_name.eql?("simple") && !action_name.eql?("document") && ENABLE_METADATA_FILTERING %>
		<%= render partial: "/metadata/filters" %>
	<% end %>
</div>
