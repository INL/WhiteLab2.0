<div class="row subnav">
	<ul id="search-nav">
		<% if action_name.eql?("simple") %>
			<li id="simple_link" class="active"><a class="tablink" onclick="event.preventDefault();"><%= t(:"page_titles.keys.simple").capitalize %></a></li>
		<% else %>
			<li id="simple_link">
				<a class="tablink"  href="/search/simple<%= !query || query.blank? ? "" : "#{query_params}&view_page=simple" %>"><%= t(:"page_titles.keys.simple").capitalize %></a>
			</li>
		<% end %>
		<% if action_name.eql?("extended") %>
			<li id="extended_link" class="active"><a class="tablink" onclick="event.preventDefault();"><%= t(:"page_titles.keys.extended").capitalize %></a></li>
