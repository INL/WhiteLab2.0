			</li>
		<% end %>
		<% if action_name.eql?("advanced") %>
			<li id="advanced_link" class="active"><a class="tablink" onclick="event.preventDefault();"><%= t(:"page_titles.keys.advanced").capitalize %></a></li>
		<% else %>
			<li id="advanced_link">
				<a class="tablink" data-page="advanced" data-patt="<%= !query || query.blank? ? "" : query.patt %>" data-params="<%= query_params %>"><%= t(:"page_titles.keys.advanced").capitalize %></a>
			</li>
		<% end %>
		<% if action_name.eql?("expert") %>
			<li id="expert_link" class="active"><a class="tablink" onclick="event.preventDefault();"><%= t(:"page_titles.keys.expert").capitalize %></a></li>
		<% else %>
			<li id="expert_link">
				<a class="tablink" data-page="expert" data-patt="<%= !query || query.blank? ? "" : query.patt %>" data-params="<%= query_params %>"><%= t(:"page_titles.keys.expert").capitalize %></a>
			</li>
		<% end %>
