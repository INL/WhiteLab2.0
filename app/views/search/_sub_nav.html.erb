<div class="row subnav">
	<ul id="search-nav">
		<% if !@page || @page.eql?('simple') %>
			<li id="simple_link" class="active"><a class="tablink" onclick="event.preventDefault();"><%= t(:"page_titles.keys.simple").capitalize %></a></li>
		<% else %>
			<li id="simple_link">
				<a class="tablink"  href="/search/simple<%= @query.blank? ? '' : @query_params+'&view_page=simple' %>"><%= t(:"page_titles.keys.simple").capitalize %></a>
			</li>
		<% end %>
		<% if @page && @page.eql?('extended') %>
			<li id="extended_link" class="active"><a class="tablink" onclick="event.preventDefault();"><%= t(:"page_titles.keys.extended").capitalize %></a></li>
		<% else %>
			<li id="extended_link">
				<a class="tablink"  href="/search/extended<%= @query.blank? ? '' : @query_params+'&view_page=extended' %>"><%= t(:"page_titles.keys.extended").capitalize %></a>
			</li>
		<% end %>
		<% if @page && @page.eql?('advanced') %>
			<li id="advanced_link" class="active"><a class="tablink" onclick="event.preventDefault();"><%= t(:"page_titles.keys.advanced").capitalize %></a></li>
		<% else %>
			<li id="advanced_link">
				<a class="tablink"  href="/search/advanced<%= @query.blank? ? '' : @query_params+'&view_page=advanced' %>"><%= t(:"page_titles.keys.advanced").capitalize %></a>
			</li>
		<% end %>
		<% if @page && @page.eql?('expert') %>
			<li id="expert_link" class="active"><a class="tablink" onclick="event.preventDefault();"><%= t(:"page_titles.keys.expert").capitalize %></a></li>
		<% else %>
			<li id="expert_link">
				<a class="tablink"  href="/search/expert<%= @query.blank? ? '' : @query_params+'&view_page=expert' %>"><%= t(:"page_titles.keys.expert").capitalize %></a>
			</li>
		<% end %>
		<% if @page && @page.eql?('document') %>
			<li id="link-spacer">||</li>
			<li id="document_link" class="active"><a class="tablink" onclick="event.preventDefault();"><%= t(:"page_titles.keys.document").capitalize %></a></li>
		<% end %>
	</ul>
	<% if @page && !@page.eql?('simple') && !@page.eql?('document') %>
		<%= render partial: "metadata/filters" %>
	<% end %>
</div>
