<% if @query.page.eql?('statistics') %>
<%= render partial: "/explore/queries/result_tabs", layout: false, locals: { view: @query.view, url_params: @query.assemble_url_params(['patt', 'filter', 'within', 'listtype', 'sample', 'samplenum', 'sampleseed', 'gap_values_tsv']) } %>
<% end %>
<div id="query-result" class="tab-content">
	<% if @query.view == 2 %>
		<%= render partial: "/result/docs" %>
	<% elsif @query.view == 4 %>
		<%= render partial: "/result/vocabulary_growth" %>
	<% elsif @query.view == 8 %>
		<%= render partial: "/result/grouped_hits" %>
	<% end %>
</div>