<% if @query %>
	<a id="history-toggle" href="#" class="show-history btn btn-info"><span class="glyphicon glyphicon-time"></span></a>
	<div class="row">
		<div class="col-xs-12">
			<div class="panel panel-default">
				<div class="panel-heading"><label><%= t(:"queries.keys.query") %></label></div>
				<div class="panel-body"><div id="query-details" class="tab-content contrast" data-query-id="<%= @query.id %>"></div></div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<div id="results" class="panel panel-default">
				<div class="panel-heading"><label><%= t(:"page_titles.keys.results").capitalize %></label></div>
				<div class="panel-body">
					<div id="result-pane" class="row" data-query-id="<%= @query.id %>" data-query-page="<%= @query.page %>">
						<span class="loading"></span>
					</div>
				</div>
			</div>
		</div>
	</div>
<% elsif @export_queries.length > 0 %>
	<a id="history-toggle" href="#" class="show-history btn btn-info"><span class="glyphicon glyphicon-time"></span></a>
<% else %>
	<a id="history-toggle" href="#" class="show-history btn btn-info hidden"><span class="glyphicon glyphicon-time"></span></a>
<% end %>
