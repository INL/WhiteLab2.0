$('#<%= @group_id %>').data('offset',<%= @offset+20 %>);
if ($('#<%= @group_id %> div.docs > table > tbody').html().indexOf('loading') > -1) {
	$('#<%= @group_id %> div.docs > table > tbody').html('');
}
$('#<%= @group_id %> div.docs > table > tbody').append("<%= escape_javascript(raw render partial: "/result/docs_in_group", layout: false) %>");
if (<%= @offset+20 %> > $('tr[data-group-id="<%= @group_id %>"] div.progress-bar').attr('aria-valuenow')) {
	$('#<%= @group_id %> button.load-grouped-docs').remove();
}
