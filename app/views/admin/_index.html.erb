<% provide(:title, t(:'page_titles.keys.settings').capitalize+" "+t(:'page_titles.keys.index').capitalize) %>
<div class="row margin-top-20">
	<div class="col-xs-12 col-sm-4 col-lg-3">
		<ul class="nav nav-pills nav-stacked">
			<% if !@tab || @tab.eql?('counts') %>
				<li class="active"><a href="#" disabled><%= t(:'page_titles.keys.node_counts').capitalize %></a></li>
			<% else %>
				<li><%= link_to t(:'page_titles.keys.node_counts').capitalize, admin_page_url(:page => 'index', :tab => 'counts') %></li>
			<% end %>
			<% if @tab && @tab.eql?('metadata') %>
				<li class="active"><a href="#" disabled><%= t(:'page_titles.keys.metadata').capitalize %></a></li>
			<% else %>
				<li><%= link_to t(:'page_titles.keys.metadata').capitalize, admin_page_url(:page => 'index', :tab => 'metadata') %></li>
			<% end %>
			<% if @tab && @tab.eql?('posheads') %>
				<li class="active"><a href="#"><%= t(:'page_titles.keys.pos_heads').capitalize %></a></li>
			<% else %>
				<li><%= link_to t(:'page_titles.keys.pos_heads').capitalize, admin_page_url(:page => 'index', :tab => 'posheads') %></li>
			<% end %>
			<% if @tab && @tab.eql?('postags') %>
				<li class="active"><a href="#"><%= t(:'page_titles.keys.pos_tags').capitalize %></a></li>
			<% else %>
				<li><%= link_to t(:'page_titles.keys.pos_tags').capitalize, admin_page_url(:page => 'index', :tab => 'postags') %></li>
			<% end %>
		</ul>
	</div>
	<div class="col-xs-12 col-sm-8 col-lg-9">
		<% if !@tab || @tab.eql?('counts') %>
			<%= render partial: '/admin/index/node_counts', layout: false %>
		<% elsif @tab.eql?('metadata') %>
			<%= render partial: '/admin/index/metadata', layout: false %>
		<% elsif @tab.eql?('posheads') %>
			<%= render partial: '/admin/index/pos_heads', layout: false %>
		<% elsif @tab.eql?('postags') %>
			<%= render partial: '/admin/index/pos_tags', layout: false %>
		<% end %>
	</div>
</div>
