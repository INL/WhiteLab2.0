<% provide(:title, t(:'page_titles.keys.settings').capitalize+" "+t(:'page_titles.keys.interface').capitalize) %>
<div class="row margin-top-20">
	<div class="col-xs-12 col-sm-4 col-lg-3">
		<ul class="nav nav-pills nav-stacked">
			<% if !@tab || @tab.eql?('language') %>
				<li class="active"><a href="#" disabled><%= t(:'page_titles.keys.languages').capitalize %></a></li>
			<% else %>
				<li><%= link_to t(:'page_titles.keys.languages').capitalize, admin_page_url(:page => 'interface', :tab => 'language') %></li>
			<% end %>
			<% if @tab && @tab.eql?('home_page') %>
				<li class="active"><a href="#" disabled><%= t(:'page_titles.keys.home_page').capitalize %></a></li>
			<% else %>
				<li><%= link_to t(:'page_titles.keys.home_page').capitalize, admin_page_url(:page => 'interface', :tab => 'home_page') %></li>
			<% end %>
			<% if @tab && @tab.eql?('help_page') %>
				<li class="active"><a href="#" disabled><%= t(:'page_titles.keys.help').capitalize %></a></li>
			<% else %>
				<li><%= link_to t(:'page_titles.keys.help').capitalize, admin_page_url(:page => 'interface', :tab => 'help_page') %></li>
			<% end %>
			<% if @tab && @tab.eql?('translate') %>
				<li class="active"><a href="#" disabled><%= t(:'page_titles.keys.translations').capitalize %></a></li>
			<% else %>
				<li><%= link_to t(:'page_titles.keys.translations').capitalize, admin_page_url(:page => 'interface', :tab => 'translate') %></li>
			<% end %>
		</ul>
	</div>
	<div class="col-xs-12 col-sm-8 col-lg-9">
		<% if !@tab || @tab.eql?('language') %>
			<%= render partial: '/admin/interface/languages', layout: false %>
		<% elsif @tab && @tab.eql?('home_page') %>
			<%= render partial: '/admin/interface/home_page', layout: false %>
		<% elsif @tab && @tab.eql?('help_page') %>
			<%= render partial: '/admin/interface/help_page', layout: false %>
		<% elsif @tab && @tab.eql?('translate') %>
			<%= render partial: '/admin/interface/translate', layout: false %>
		<% end %>
	</div>
</div>
