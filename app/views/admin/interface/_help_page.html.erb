<% first_lang = nil %>
<div id="help_page" class="row">
	<div class="col-xs-12">
		<div class="visible-xs" style="width: 100%; height: 10px;"></div>
		<h3 class="padding-bottom-10"><%= t(:'page_titles.keys.help').capitalize %></h3>
		<ul class="nav nav-tabs">
			<% @help_pages.each_with_index do |(lang, data), i| %>
				<% if i == 0 %>
					<% first_lang = lang %>
				<% end %>
				<% if (!@hlang.blank? && lang.eql?(@hlang)) || (@hlang.blank? && i == 0) %>
					<li class="active"><a href="#"><%= image_tag("lang/"+lang+".svg", size: "16") %> <%= lang %></a></li>
				<% else %>
					<li><a href="/admin/interface?tab=help_page&hlang=<%= lang %>"><%= image_tag("lang/"+lang+".svg", size: "16") %> <%= lang %></a></li>
				<% end %>
			<% end %>
		</ul>
		<div class="content">
			<% selected_lang = !@hlang.blank? ? @hlang : first_lang %>
			<%= form_tag('/admin/interface/help_page?hlang='+selected_lang, :class => "remote-form", :method => :post, :remote => true) do %>
				<%= text_area_tag 'help_page', @help_pages[selected_lang]["help_page"].html_safe %>
				<%= submit_tag(t(:'button_labels.keys.save').capitalize, :class => "btn btn-xs btn-primary") %>
			<% end %>
		</div>
	</div>
</div>